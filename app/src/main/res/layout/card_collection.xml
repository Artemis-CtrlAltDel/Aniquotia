<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="?attr/colorSurface"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">

        <include
            layout="@layout/_starset" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/collection_creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:backgroundTint="?attr/colorAccent"
                    android:scaleX=".9"
                    android:scaleY=".9"
                    android:text="20 quotes"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/collection_quotes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:backgroundTint="?attr/colorPrimarySurface"
                    android:scaleX=".9"
                    android:scaleY=".9"
                    android:text="20 quotes"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_21sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/collection_updated_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tue 31st 2023" />

                <TextView
                    android:id="@+id/collection_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detective Conanhhhhhhhuhiuhiuhuihiuhjknjknjknjnkjn"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>